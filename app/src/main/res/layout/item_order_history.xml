<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_woowa_light_gray_line_1_rect">

        <ImageView
            android:id="@+id/iv_order_represent_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_order_count"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_order_represent_product"
            app:layout_constraintEnd_toEndOf="@+id/iv_order_represent_product"
            app:layout_constraintStart_toStartOf="@+id/iv_order_represent_product"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="+5" />

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/tv_order_products"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_order_represent_product"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="주문한 날짜: 2022.10.06" />

        <TextView
            android:id="@+id/tv_order_products"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_order_represent_product"
            app:layout_constraintTop_toBottomOf="@id/tv_order_date"
            tools:text="멧돼지 고기 외 3건" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>