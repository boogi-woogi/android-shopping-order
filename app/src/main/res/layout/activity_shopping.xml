<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isLoaded"
            type="Boolean" />

        <variable
            name="totalBasketCount"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.shopping.ShoppingActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/woowa_toolbar_gray"
            android:minHeight="?attr/actionBarSize"
            android:paddingStart="26dp"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/tb_shopping"
            app:titleTextColor="@color/white">

            <TextView
                android:id="@+id/button4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginEnd="19dp"
                android:background="@drawable/shape_total_basket_count"
                android:gravity="center"
                android:text="@{String.valueOf(totalBasketCount)}"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="1" />

            <ImageView
                android:id="@+id/iv_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tb_shopping"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tb_shopping"
                app:srcCompat="@drawable/ic_cart" />

            <ImageView
                android:id="@+id/iv_order_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tb_shopping"
                app:layout_constraintEnd_toStartOf="@id/iv_basket"
                app:layout_constraintTop_toTopOf="@id/tb_shopping"
                app:srcCompat="@drawable/ic_order_history" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shopping"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_shopping"
            app:spanCount="2"
            tools:itemCount="10"
            tools:listitem="@layout/item_product" />

        <include
            android:id="@+id/skeleton_product"
            layout="@layout/layout_skeleton_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{isLoaded?View.GONE:View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_shopping" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
